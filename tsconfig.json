{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/*"],
      "@commands/*": ["src/modules/commands/*"],
      "@discord/*": ["src/modules/discord/*"],
      "@planetside/*": ["src/modules/planetside/*"]
    }
  }
}
