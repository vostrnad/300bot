{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@app/*": ["src/*"],
      "@commands/*": ["src/modules/commands/*"],
      "@database/*": ["src/modules/database/*"],
      "@discord/*": ["src/modules/discord/*"],
      "@planetside/*": ["src/modules/planetside/*"],

      "@test/*": ["test/*"]
    }
  }
}
